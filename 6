import logging, matplotlib.pyplot as plt
from tensorflow.keras.datasets import mnist
from tensorflow.keras.models import Sequential
from tensorflow.keras.layers import Dense, Flatten

logging.basicConfig(filename="log.txt", level=logging.INFO)

(x,y),(xt,yt)=mnist.load_data()

m=Sequential([Flatten(input_shape=(28,28)), Dense(10, activation="softmax")])
m.compile("adam","sparse_categorical_crossentropy", metrics=["accuracy"])

h=m.fit(x,y,epochs=5,batch_size=32,verbose=0)

logging.info(m.evaluate(xt,yt,verbose=0)[1])

plt.boxplot(h.history["accuracy"])
plt.show()
